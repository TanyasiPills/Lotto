<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.lotto.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Button fx:id="button" text="Sorsol" onAction="#buttonEvent"/>
        <Label fx:id="textOut" style="-fx-font: 30 arial" text="3" HBox.hgrow="ALWAYS"/>
    </HBox>

    <Label fx:id="textList" style="-fx-font: 24 arial"  VBox.vgrow="ALWAYS"/>
</VBox>
